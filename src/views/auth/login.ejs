<%- include('../shared/head', {webTitle: 'Login'}) -%>
<div class="container">
    <% if (msg) { %>
        <div id="alertMessage" class="alert-success" role="alert">
            <%= msg %>
            <button id="closeAlert" class="close">&times;</button>
        </div>
    <% } %>
    <% if (error) { %>
        <div id="alertMessage" class="alert-danger" role="alert">
            <%= error %>
            <button id="closeAlert" class="close">&times;</button>
        </div>
    <% } %>
    <form method="POST">
        <div class="form-outline my-5">
            <input type="email" name="email" class="form-control" />
            <label class="form-label" for="email">Email address</label>
        </div>

        <div class="form-outline mb-4">
            <input type="password" name="password" class="form-control" />
            <label class="form-label" for="password">Password</label>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

        <div class="text-center">
            <p>Not a member? <a href="/auth/register">Register</a></p>
        </div>
    </form>
</div>
<%- include('../shared/footer') -%>